px2rem(value)
    return (value / 75) rem

px2px(value)
    return round(0.5 * value) px

/**
 * 清除浮动
 */
clearfix()
    &:before,
    &:after
        content " "
        display table

    &:after
        clear both

    zoom 1

/**
 * 文本结尾加省略号
 */
text-overflow()
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

/**
 * 文本自然换行
 */
word-break()
    word-break break-all
    word-wrap break-word
    white-space normal

/**
 * 居中定位
 */
center(way)
    position way
    left 50%
    top 50%
    transform translate(-50%, -50%)


/**
 * 限制显示行数，超过加省略号
 */
rows-overflow(rows)
    overflow hidden
    text-overflow ellipsis
    display -webkit-box
    -webkit-line-clamp rows
    -webkit-box-orient vertical
    -moz-box-orient vertical
    white-space initial



